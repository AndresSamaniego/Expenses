<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalExpenses.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="mainColor">#369691</Color>
            <Color x:Key="darkColor">#A790A5</Color>

            <Style x:Key="subtitleLabel" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource mainColor}"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize"  Value="15"/>
            </Style>

            <Style TargetType="Label"  x:Key="mainValueLabel"  BasedOn="{StaticResource subtitleLabel}">
                <Setter Property="TextColor" Value="{StaticResource darkColor}"/>
                <Setter Property="FontAttributes" Value="None"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>